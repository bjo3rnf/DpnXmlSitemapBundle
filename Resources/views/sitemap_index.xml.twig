<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for number in 1..num_sitemaps if num_sitemaps > 1 %}
        <sitemap>
            <loc>http://{{ app.request.getHost }}/sitemap{{ number }}.xml</loc>
        </sitemap>
    {% else %}
        <sitemap>
            <loc>http://{{ app.request.getHost }}/sitemap.xml</loc>
        </sitemap>
    {% endfor %}
</sitemapindex>